
@{
    ViewBag.Title = "Degree";
}

<h2>@ViewBag.DegreeName</h2>

<div class="row">
    <div class="col-sm-3">
        <div class="panel panel-default" id="profpanel">
            <div class="panel-heading">Coordinator</div>
            <div class="panel-body">
                <p>@ViewBag.Coordinator</p>
                <p>@ViewBag.ProfTitle</p>
                <img src="~/Images/@ViewBag.Picture" class="img-responsive" />
                <br /><br />
                <p>Office: @ViewBag.Office</p>
                <br />
                <ul>
                    <li>@ViewBag.PhD</li>
                    <li>@ViewBag.Masters</li>
                    <li>@ViewBag.Bachelors</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-9">
        <div class="container">
            <h2>FAQ's</h2>
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">@ViewBag.Question1</a>
                        </h4>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <div class="panel-body">
                            @ViewBag.Answer1
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">@ViewBag.Question2</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse">
                        <div class="panel-body">
                            @ViewBag.Answer2
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">@ViewBag.Question3</a>
                        </h4>
                    </div>
                    <div id="collapse3" class="panel-collapse collapse">
                        <div class="panel-body">
                            @ViewBag.Answer3
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapse4">@ViewBag.Question4</a>
                        </h4>
                    </div>
                    <div id="collapse4" class="panel-collapse collapse">
                        <div class="panel-body">
                            @ViewBag.Answer4
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Form to submit a new question-->
<footer>
    <h3>Submit a Question</h3>
    <form class="questionForm">
        <div class="form-group">
            <label for="firstName">First Name</label>
            <input type="password" class="form-control" id="firstName" placeholder="First Name">
        </div>
        <div class="form-group">
            <label for="lastName">Last Name</label>
            <input type="password" class="form-control" id="lastName" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label for="inputEmail1">Email address</label>
            <input type="email" class="form-control" id="inputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="Textarea">Question:</label>
            <textarea class="form-control" id="exampleTextarea" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</footer>

